{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs\\MarkelInsuranceApp.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "SqlServerConnectionConfiguration": {
    "ConnectionString": "Server=localhost;Database=MarkelInsurance;Trusted_Connection=True;",
    "ConnectionTimeOut": 3
  },
  "ClaimsRepositorySettings": {
    "GetClaimProc": "Single_Claim_Get",
    "UpdateCliamProc": "Single_Claim_Update",
    "GetCompanyClamsProc": "Claims_GetAllForCompany"
  },
  "CompanyRepositorySettings": {
    "GetCompanyProc": "Company_Get"
  },
  "AllowedHosts": "*"
}
